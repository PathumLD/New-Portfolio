generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  tags        String[]
  githubLink  String?
  demoLink    String?
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id          String   @id @default(uuid())
  jobTitle    String
  company     String
  startDate   DateTime
  endDate     DateTime?
  description String
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Education {
  id          String   @id @default(uuid())
  degree      String
  university  String
  startDate   DateTime
  endDate     DateTime?
  description String
  skills      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Volunteer {
  id          String   @id @default(uuid())
  role        String
  community   String
  startDate   DateTime
  endDate     DateTime?
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Certificate {
  id             String   @id @default(uuid())
  name           String
  organization   String
  issuedDate     DateTime
  credentialLink String?
  documentUrl    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Award {
  id           String   @id @default(uuid())
  name         String
  organization String
  issuedDate   DateTime
  documentUrl  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model TutoringGrade {
  id        String            @id @default(uuid())
  name      String
  lessons   TutoringLesson[]
  resources TutoringResource[]
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model TutoringLesson {
  id         String              @id @default(uuid())
  title      String
  coverImage String
  gradeId    String
  grade      TutoringGrade       @relation(fields: [gradeId], references: [id])
  videos     TutoringVideoLink[]
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
}

model TutoringVideoLink {
  id         String         @id @default(uuid())
  title      String
  youtubeUrl String
  lessonId   String
  lesson     TutoringLesson @relation(fields: [lessonId], references: [id])
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

enum ResourceType {
  TEXTBOOK
  MODEL_PAPER
  NOTE
}

model TutoringResource {
  id        String        @id @default(uuid())
  title     String
  type      ResourceType
  fileUrl   String
  gradeId   String
  grade     TutoringGrade @relation(fields: [gradeId], references: [id])
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Blog {
  id               String   @id @default(uuid())
  title            String
  link             String
  coverImage       String?
  tags             String[]
  shortDescription String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
